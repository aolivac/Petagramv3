<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:card_view="http://schemas.android.com/tools"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="5dp"

    android:layout_marginTop="@dimen/top"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"

    cardview:paddingEnd="@dimen/activity_horizontal_margin"

    >
    <LinearLayout
        android:id="@+id/LinearLayout_cardviewCV"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageView_mascotaCV"
            android:src="@drawable/lobo1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/LinearLayout_descripcionCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ImageButton_huesoBlancoCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/simple_hueso"
                android:onClick="darLike"

                />

            <TextView
                android:id="@+id/tv_nombreCV"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Perro"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                />
<!--
            <ImageView
                android:id="@+id/iv_huesoAmarilloCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/simple_hueso_amarillo"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="centerInside"/>
                -->
            <TextView
                android:id="@+id/tv_likesCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="@string/plikes"
                android:textSize="30dp"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>